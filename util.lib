_loadLibs() {
	local FONTE=/opt/scripts/libs
	while : ; do
		[ -f $FONTE/${1:-aa}.lib ] && source $FONTE/${1:-aa}.lib || return 1
		shift
	done
}

_getParam() {
	X="$1"
	while shift
	do
		if [ "$1" = "$X" ]; then
			[ "$2" ] && echo "$2" && return 0 || return 1
		fi
	done
	return 1
}
