_import() {
	local FONTE=/opt/scripts/libs
	while : ; do
		[ -z "$1" ] && break
		[ -f $FONTE/${1}.lib ] && source $FONTE/${1:-aa}.lib || return 1
		shift
	done
}

_getParam() {
	X="$1"
	while shift; do
		[ "$1" = "$X" ] && {
			[ "$2" ] && echo "$2" && return 0 || return 1
		}
	done
	return 1
}
_getVAR() {
	egrep "^$1=" /opt/scripts/global.var | tail -n1 | cut -d'=' -f2
}
