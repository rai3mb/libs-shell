source /opt/scripts/libs/util.lib || return 1
#====================================================
_MONGO_URI="mongo "$(_getVAR MONGO_PROD)" --quiet --eval"
_mongoChangeURI() {
	[ "$1" ] && _MONGO_URI="mongo "$(_getVAR $1)" --quiet --eval" || return 1
}

_mongoReplace() {
	local COLECAO="$1"
	local ALVO="$2"
	local DOCUMENTO="$3"
	[ -z "$COLECAO" -o -z "$ALVO" ] && return 1
	$_MONGO_URI "db.${COLECAO:-xx}.replaceOne($ALVO, $DOCUMENTO)"
}

_mongoInsert() {
	local COLECAO="$1"
	local DOCUMENTO="$2"
	[ -z "$COLECAO" -o -z "$DOCUMENTO" ] && return 1
	$_MONGO_URI "db.${COLECAO:-xx}.insert($DOCUMENTO)"
}

_mongoFind() {
	local COLECAO="$1"
	local ALVO="$2"
	local EXTRA="$3"
	[ -z "$COLECAO" -o -z "$ALVO" ] && return 1
	$_MONGO_URI "db.${COLECAO:-xx}.find($ALVO,{_id:0})${EXTRA:-.limit(10).forEach(printjson)}"
}

_mongoInsertOrReplace() {
	local COLECAO="$1"
	local ALVO="$2"
	local DOCUMENTO="$3"
	[ -z "$COLECAO" -o -z "$DOCUMENTO" -o -z "$ALVO" ] && return 1
	RS=$(_mongoFind $COLECAO $ALVO)
	[ "$RS" ] && _mongoReplace $COLECAO $ALVO "$DOCUMENTO" || _mongoInsert $COLECAO "$DOCUMENTO"
}

_getValor() {
	_mongoFind "$1" "$2" | jq .${3} | sed 's/"//g'
}
